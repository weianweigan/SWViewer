@page "/"

<PageContainer Title="Viewer">
    <Card>
        @if (!string.IsNullOrWhiteSpace(Url))
        {
            <div>
                <iframe src="@Url" height="800" width="100%"></iframe>
            </div>
            @*<img src=@(Path.Combine(APIUrl,Url)) alt="avatar" style="height:100%" />*@
        }
        else
        {

        }

        <Upload Action="@($"{APIUrl}/api/sldfile")"
                Name="sldfile"
                Drag
                Class="avatar-uploader"
                ListType="picture-card"
                ShowUploadList="false"
                BeforeUpload=@BeforeUpload
                OnCompleted=@OnCompleted>
            <p class="ant-upload-drag-icon">
                <Icon Type="inbox" />
            </p>
            <p class="ant-upload-text">Click or drag file to this area to upload</p>
            <p class="ant-upload-hint">
                Support for a single upload. Strictly prohibit from uploading company data or other
                band files
            </p>
        </Upload>
    </Card>
</PageContainer>
